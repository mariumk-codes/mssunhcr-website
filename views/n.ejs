<style>
.main-container{
  padding-top: 120px;
  margin-bottom: 500px;
  height: auto;
  /*height: 100vh;
  width: 100vw;*/
}

.footer {
  display: flex;
  flex-flow: row wrap;
  padding: 50px;
  color: #fff;
  background-color: #0d1422;
  position: bottom;
  }
  
  .footer > * {
  flex:  1 100%;
  }
  
  .l-footer {
  margin-right: 1.25em;
  margin-bottom: 2em;
  }
  
  h2 {
  font-weight: 400;
  font-size: 15px;
  }
  
  .footer ul {
  list-style: none;
  padding-left: 0;
  }
  
  .footer li {
  line-height: 2em;
  }
  
  .footer a {
  text-decoration: none;
  }
  
  .r-footer {
  display: flex;
  flex-flow: row wrap;
  }
  
  .r-footer > * {
  flex: 1 50%;
  margin-right: 1.25em;
  }
  
  .box a {
  color: #999;
  }
  
  .h-box {
  column-count: 2;
  column-gap: 1.25em;
  }
  
  .b-footer {
  text-align: center;
  color: #999;
  padding-top: 50px;
  }
  
  .l-footer p {
  padding-right: 20%;
  color: #999;
  }   
  
  @media screen and (min-width: 100px) {
  .r-footer > * {
  flex: 1;
  }
  
  .features {
  flex-grow: 2;
  }
  
  .l-footer {
  flex: 1 0px;
  }
  
  .r-footer {
  flex: 2 0px;
  }
  }
  .pdf-container{
      margin-left: 250px;
      height: 100vh;
      margin-top: 120px;
  }
  .banner{
  width: 100%;
  height: 200px;
  overflow: hidden;
 
  /*background-image: url("/img/joel.jpg");*/
}
.banner .color-overlay{
  width: 100%;
  margin-top: -70%;
  height: 200px;
  color: #181c3d38;
}
.banner-text{
  width: 100%;
  position: relative;
  margin-top: -55%;
  padding: 30px;
  color: rgba(153, 153, 153, 0.164);
}
.banner-text h1{
  color: #fff;
}
.banner-text h6{
  padding-top: 30px;
  color: white;
}
.banner-text p{
  margin-top: 20px;
  color: white;
  font-size: 10px;
}
.banner-text p a{
  text-decoration: none;
  color: white;
}
</style>
